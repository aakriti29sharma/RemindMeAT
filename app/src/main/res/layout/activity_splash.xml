<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"

    xmlns:pv="http://schemas.android.com/apk/res-auto"
    tools:context="com.placepickexample.SplashActivity">

    <me.wangyuwei.particleview.ParticleView
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent"
        pv:pv_background_color="@color/colorPrimaryDark"
        android:id="@+id/particle"
        pv:pv_host_text="Remind Me"
        pv:pv_host_text_size="32sp"
        pv:pv_particle_text="'@"
        pv:pv_particle_text_size="24sp"
        pv:pv_text_color="#FFF"
        pv:pv_text_anim_time="1000"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="1000" />
</LinearLayout>
